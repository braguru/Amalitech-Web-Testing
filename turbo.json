{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build",
        "^test"
      ],
     "inputs": ["$TURBO_DEFAULT$", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**"
      ]
    },
    "lint": {},
    "lint:fix": {},
    "test": {},
    "test:watch": {
      "cache": false, 
      "persistent": true
    },
    "build:storybook": {},
    "cms:dev": {},
    "ui": {}
  }
}
