{
  "name": "@amt-web/ui",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "private": true,
  "scripts": {
    "dev": "npm run build",
    "amplify:build": "tsup index.ts --format cjs,esm --dts && npm run amplify:postbuild && npm run amplify:tailwindbuild",
    "build": "tsup index.ts --format cjs,esm --dts && npm run postbuild && npm run tailwind:build",
    "amplify:postbuild": "copyfiles -u 1 src/assets/fonts/**/** ../../apps/@amt-web/ui/dist",
    "postbuild": "copyfiles -u 1 src/assets/fonts/**/** dist",
    "tailwind:build": "npx tailwindcss -i ./src/global.css -o ./dist/styles/theme.css",
    "amplify:tailwindbuild": "npx tailwindcss -i ./src/global.css -o ../../apps/@amt-web/ui/dist/styles/theme.css",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "generate:component": "turbo gen react-component",
    "test": "jest --passWithNoTests --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@amt-web/typescript-config": "*",
    "@eslint/js": "^9.13.0",
    "@next/eslint-plugin-next": "^15.0.1",
    "@storybook/react": "^8.3.5",
    "@turbo/gen": "^1.12.4",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/utils": "^8.11.0",
    "autoprefixer": "^10.4.20",
    "copyfiles": "^2.4.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsx-a11y": "^6.10.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-testing-library": "^6.4.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "postcss": "^8.4.47",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.3.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.11.0"
  },
  "peerDependencies": {
    "next": ">=14.2.14",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0"
  }
}
